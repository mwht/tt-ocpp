<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <Button
            android:text="SEND"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sendButton" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="110dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="161dp"/>
    <Button
            android:text="disconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/disconnectButton" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/sendButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="161dp"/>
    <Button
            android:text="GET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/getDataButton" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="112dp" android:layout_marginStart="28dp"
            app:layout_constraintStart_toEndOf="@+id/sendButton"/>
</android.support.constraint.ConstraintLayout>